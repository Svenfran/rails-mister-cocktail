<h1>Receip</h1>

<%= link_to 'Back', cocktails_path(@cocktail) %>

<div class="container">
  <div class="row">
    <div class="card mb-3" style="width: 18rem;">
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, crop: :fill, class: "card-img-top", alt: "Card image cap" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= @cocktail.name%>
          <%= link_to edit_cocktail_path(@cocktail) do %>
            <i class="fas fa-edit"></i>
          <% end  %>
        </h5>
          Add Ingredient
          <%= link_to new_cocktail_dose_path(@cocktail) do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </p>
        <ul>
            <% @cocktail.doses.each do |dose| %>
              <% @cocktail.ingredients.each do |ingredient| %>
                <% if dose.ingredient_id == ingredient.id %>
                  <li>
                    <%= dose.description %>
                    <%= ingredient.name %>
                    <%= link_to dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'} do %>
                      <i class="far fa-trash-alt"></i>
                    <% end %>
                  </li>
                <% end %>
              <% end %>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>